<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReguladoresFragment">

    <!-- RecyclerView para mostrar os alimentos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_reguladores"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_visualizar_lancheira" />

    <!-- BotÃ£o "Visualizar Lancheira" fixado na parte inferior -->
    <Button
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:id="@+id/btn_visualizar_lancheira"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VISUALIZAR LANCHEIRA"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="16dp"
        android:textSize="18sp"/>
</FrameLayout>