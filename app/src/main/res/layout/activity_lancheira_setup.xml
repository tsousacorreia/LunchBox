<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".LancheiraSetupActivity">

    <!-- Card para a seleção de perfis existentes -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_perfis_existentes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/text_perfis_existentes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfis Existentes"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- RecyclerView para exibir perfis existentes -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_perfis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card para o perfil da criança -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/text_perfil_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Criar Perfil"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Campos do perfil da criança -->
            <EditText
                android:id="@+id/edit_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome da Criança" />

            <EditText
                android:id="@+id/edit_idade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Idade" />

            <EditText
                android:id="@+id/edit_preferencias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Preferências Alimentares" />

            <!-- Botão para criar o perfil -->
            <Button
                android:id="@+id/btn_criar_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:text="Criar Perfil" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card para a seleção do dia da semana -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_dia_semana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/text_dia_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecione o Dia da Semana"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Seletor de dias da semana -->
            <RadioGroup
                android:id="@+id/radio_group_dias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radio_segunda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Segunda-feira" />

                <RadioButton
                    android:id="@+id/radio_terca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terça-feira" />

                <RadioButton
                    android:id="@+id/radio_quarta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quarta-feira" />

                <RadioButton
                    android:id="@+id/radio_quinta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quinta-feira" />

                <RadioButton
                    android:id="@+id/radio_sexta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sexta-feira" />

            </RadioGroup>

            <!-- Botão para finalizar a seleção -->
            <Button
                android:id="@+id/btn_finalizar_dia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:text="Finalizar" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>