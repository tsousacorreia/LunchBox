<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SnacksFragment">

    <!-- RecyclerView para mostrar os alimentos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_snacks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_visualizar_lancheira" />

    <!-- BotÃ£o "Visualizar Lancheira" fixado na parte inferior -->
    <Button
        android:id="@+id/btn_visualizar_lancheira"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visualizar Lancheira"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:backgroundTint="@color/design_default_color_primary"
        android:textColor="@android:color/white"/>
</FrameLayout>