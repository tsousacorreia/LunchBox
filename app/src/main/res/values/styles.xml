<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CardStyle">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">6dp</item>
        <item name="android:layout_marginBottom">@dimen/spacing_medium</item>
    </style>

    <style name="CardTextStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeaderTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:padding">12dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:backgroundTint">@color/primaryColor</item>
    </style>

    <style name="PrimaryButtonStyle">
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/buttonColor</item>
    </style>

    <style name="LinkTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/linkColor</item>
    </style>
</resources>
